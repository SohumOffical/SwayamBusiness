<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:elevation="@dimen/_2sdp"
        android:background="@drawable/reatangle_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_2sdp">

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/shop_img"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="match_parent"
                    android:src="@drawable/shop_img"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/shop_img"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp">

                <TextView
                    android:id="@+id/pro_shop_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Shri Super Market"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_14"
                    android:layout_marginTop="@dimen/_2sdp"/>

                <TextView
                    android:id="@+id/pro_shop_detail_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pro_shop_name_txt"
                    android:fontFamily="@font/roboto_regular"
                    android:text="B-101, Anand Square, Tragad"
                    android:textColor="@color/textChild"
                    android:textSize="@dimen/text_12"
                    android:maxLines="3"
                    android:layout_marginTop="@dimen/_2sdp"/>

                <TextView
                    android:id="@+id/pro_date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_below="@+id/pro_shop_detail_txt"
                    android:fontFamily="@font/roboto_regular"
                    android:text=""
                    android:textColor="@color/textChild"
                    android:textSize="@dimen/text_12"
                    android:layout_marginTop="@dimen/_2sdp"/>


                <TextView
                    android:id="@+id/original_price_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_below="@+id/pro_date_txt"
                    android:fontFamily="@font/roboto_regular"
                    android:text=""
                    android:textColor="@color/textChild"
                    android:textSize="@dimen/text_12"
                    android:layout_marginTop="@dimen/_2sdp"/>


                <TextView
                    android:id="@+id/offer_price_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_below="@+id/original_price_txt"
                    android:fontFamily="@font/roboto_bold"
                    android:text=""
                    android:textColor="@color/chocolate"
                    android:textSize="@dimen/text_12"
                    android:layout_marginTop="@dimen/_2sdp"/>
                <TextView
                    android:id="@+id/final_price_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_below="@+id/offer_price_txt"
                    android:fontFamily="@font/roboto_regular"
                    android:text=""
                    android:textColor="@color/textChild"
                    android:textSize="@dimen/text_12"
                    android:layout_marginTop="@dimen/_2sdp"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pro_date_txt"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/prom_likes_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Likes : 0"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_12" />

                    <TextView
                        android:id="@+id/prom_dislikes_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Dislikes : 0"
                        android:singleLine="true"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textAllCaps="true"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_12" />

                    <TextView
                        android:id="@+id/viwer_count_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Views : 0"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textAllCaps="true"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_12"
                        android:paddingLeft="@dimen/_5sdp" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rating_rel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_below="@+id/pro_date_txt"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/rate_value_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:fontFamily="@font/roboto_regular"
                        android:text="0"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_16" />

                    <RatingBar
                        android:id="@+id/rate_value"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:numStars = "5"
                        android:rating   = "0"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/rate_value_txt"
                        style="?android:attr/ratingBarStyleSmall" />

                    <TextView
                        android:id="@+id/vote_value_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:fontFamily="@font/roboto_regular"
                        android:text="0 Ratings"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/rate_value"
                        android:gravity="center_vertical"
                        android:textColor="@color/textChild"
                        android:textSize="@dimen/text_12" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/verified_rel"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_below="@+id/rating_rel"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/swyam_logo_part1"/>

                    <TextView
                        android:id="@+id/verified_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/roboto_regular"
                        android:text="verified"
                        android:textColor="@color/textHeader"
                        android:textSize="@dimen/text_12" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/view_more_rel"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_gravity="bottom|end"
        android:elevation="@dimen/_5sdp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:padding="@dimen/_15sdp"
        android:src="@drawable/ic_right_arrow_angle"
        android:background="@drawable/app_bg_circle_stroked"
        app:tint="@color/white" />


</RelativeLayout>
