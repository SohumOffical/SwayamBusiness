<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".users.ChooseRoleActivity">

    <RelativeLayout
        android:id="@+id/header_rel"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:padding="@dimen/_12sdp"
            android:src="@drawable/ic_back_arrow"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/app_logo"
        android:layout_centerHorizontal="true" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_logo"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_2sdp"
                    app:cardBackgroundColor="@color/white"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp">

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:src="@drawable/ic_girl"
                            android:padding="@dimen/_5sdp"
                            android:textAllCaps="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/bg_circle_shape"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="@string/i_am_saller"
                            android:layout_below="@+id/img1"
                            android:textSize="@dimen/text_18"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:layout_marginTop="@dimen/_10sdp"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/seller_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/img2"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_minus30sdp">

                        <LinearLayout
                            android:id="@+id/user_rel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <FrameLayout
                                android:id="@+id/cardContent"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_16sdp"
                                android:background="@drawable/app_shadoe">


                                <TextView
                                    android:id="@+id/name_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:gravity="center_vertical"
                                    android:maxLines="2"
                                    android:textAllCaps="true"
                                    android:paddingLeft="@dimen/_25sdp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_12"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="@string/i_am_saller" />

                            </FrameLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivGo"
                            android:layout_width="@dimen/_26sdp"
                            android:layout_height="@dimen/_26sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:background="@drawable/app_green_bg_circle_stroked"
                            android:padding="@dimen/_8sdp"
                            android:tint="@color/white"
                            android:src="@drawable/ic_check" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:src="@drawable/ic_new_user"
                        android:tint="@color/colorPrimary"
                        android:padding="@dimen/_15sdp"
                        android:background="@drawable/bg_circle_shape"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp">

                    <RelativeLayout
                        android:id="@+id/service_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/img3"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_minus30sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_16sdp"
                                android:background="@drawable/app_shadoe">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:gravity="center_vertical"
                                    android:maxLines="2"
                                    android:textAllCaps="true"
                                    android:paddingLeft="@dimen/_25sdp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_12"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="@string/i_am_service_provider" />

                            </FrameLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivGo_2"
                            android:layout_width="@dimen/_26sdp"
                            android:layout_height="@dimen/_26sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:background="@drawable/app_bg_circle_stroked"
                            android:padding="@dimen/_8sdp"
                            android:tint="@color/white"
                            android:src="@drawable/ic_keyboard_arrow_right" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:src="@drawable/ic_new_user"
                        android:tint="@color/colorPrimary"
                        android:padding="@dimen/_15sdp"
                        android:background="@drawable/bg_circle_shape"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/needs_rel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/img4"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_minus30sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_45sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_16sdp"
                                android:background="@drawable/app_shadoe">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:gravity="center_vertical"
                                    android:maxLines="2"
                                    android:paddingLeft="@dimen/_25sdp"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/text_16"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="@string/i_have_needs" />

                            </FrameLayout>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/ivGo_3"
                            android:layout_width="@dimen/_26sdp"
                            android:layout_height="@dimen/_26sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:background="@drawable/app_bg_circle_stroked"
                            android:padding="@dimen/_8sdp"
                            android:tint="@color/white"
                            android:src="@drawable/ic_keyboard_arrow_right" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="@dimen/_70sdp"
                        android:layout_height="@dimen/_70sdp"
                        android:src="@drawable/ic_girl"
                        android:padding="@dimen/_5sdp"
                        android:background="@drawable/bg_circle_shape"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/next_img"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/bg_circle_shape"
        android:backgroundTint="@color/colorPrimary"
        android:padding="@dimen/_8sdp"
        android:rotation="180"
        android:tint="@color/white"
        android:elevation="@dimen/_5sdp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/_20sdp"
        android:src="@drawable/ic_back_arrow" />

</RelativeLayout>