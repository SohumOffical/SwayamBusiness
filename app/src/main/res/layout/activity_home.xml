<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.home.HomeActivity">

    //background layout
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:weightSum="2"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/loginbg"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#8EAAC9FF"/>

                <ImageView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/app_logo_transparant"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/text_you_want_to"
                    android:textColor="@color/drak_blue_color"
                    android:textSize="@dimen/text_18"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:background="#8EAAC9FF"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/app_logo_transparant"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:background="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp">

           <androidx.core.widget.NestedScrollView
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">

                   <LinearLayout
                       android:id="@+id/li1"
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/_70sdp">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           android:layout_weight="1"
                           android:background="@drawable/reatangle">

                           <ImageView
                               android:layout_width="@dimen/_30sdp"
                               android:layout_height="@dimen/_30sdp"
                               android:background="@drawable/ic_media"
                               android:layout_gravity="center_horizontal"
                               android:layout_marginTop="@dimen/_5sdp"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="@dimen/_5sdp"
                               android:fontFamily="@font/roboto_medium"
                               android:gravity="center"
                               android:padding="@dimen/_5sdp"
                               android:text="@string/mobile_data_usage"
                               android:textColor="@color/colorPrimary"
                               android:textSize="@dimen/text_14"
                               android:layout_gravity="center_horizontal"/>

                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           android:layout_weight="1"
                           android:background="@drawable/reatangle"
                           android:layout_marginLeft="@dimen/_5sdp">

                           <ImageView
                               android:layout_width="@dimen/_30sdp"
                               android:layout_height="@dimen/_30sdp"
                               android:background="@drawable/ic_media"
                               android:layout_gravity="center_horizontal"
                               android:layout_marginTop="@dimen/_5sdp"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textSize="@dimen/text_14"
                               android:text="@string/app_wisa_data_usage"
                               android:gravity="center"
                               android:textColor="@color/colorPrimary"
                               android:fontFamily="@font/roboto_medium"
                               android:padding="@dimen/_5sdp"
                               android:layout_marginTop="@dimen/_5sdp"
                               android:layout_gravity="center_horizontal"/>

                       </LinearLayout>

                   </LinearLayout>

                   <LinearLayout
                       android:id="@+id/li2"
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/_70sdp"
                       android:layout_marginTop="@dimen/_5sdp"
                       android:layout_below="@+id/li1">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           android:layout_weight="1"
                           android:background="@drawable/reatangle">

                           <ImageView
                               android:layout_width="@dimen/_30sdp"
                               android:layout_height="@dimen/_30sdp"
                               android:background="@drawable/ic_fitness"
                               android:layout_gravity="center_horizontal"
                               android:layout_marginTop="@dimen/_5sdp"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textSize="@dimen/text_14"
                               android:text="@string/fitness_tracker"
                               android:gravity="center"
                               android:textColor="@color/colorPrimary"
                               android:fontFamily="@font/roboto_medium"
                               android:padding="@dimen/_5sdp"
                               android:layout_marginTop="@dimen/_5sdp"
                               android:layout_gravity="center_horizontal"/>

                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           android:layout_weight="1"
                           android:background="@drawable/reatangle"
                           android:layout_marginLeft="@dimen/_5sdp">

                           <ImageView
                               android:layout_width="@dimen/_30sdp"
                               android:layout_height="@dimen/_30sdp"
                               android:src="@drawable/ic_weight_scale"
                               android:layout_gravity="center_horizontal"
                               android:layout_marginTop="@dimen/_5sdp"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textSize="@dimen/text_14"
                               android:text="@string/digital_well_being"
                               android:gravity="center"
                               android:textColor="@color/colorPrimary"
                               android:fontFamily="@font/roboto_medium"
                               android:padding="@dimen/_5sdp"
                               android:layout_marginTop="@dimen/_5sdp"
                               android:layout_gravity="center_horizontal"/>

                       </LinearLayout>

                   </LinearLayout>

                   <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp">

                        //active promotion
                        <LinearLayout
                            android:id="@+id/active_promotion1"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:background="@drawable/circle_with_white_color"
                            android:elevation="@dimen/_5sdp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="26dp"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:src="@drawable/active_promotion"
                                app:tint="@color/black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text="@string/active_promotion"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/text_12"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/no_active_promation_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text="0"
                                android:singleLine="true"
                                android:gravity="center_horizontal"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_18"
                                android:layout_marginTop="@dimen/_5sdp"/>

                        </LinearLayout>

                        //total view
                        <LinearLayout
                            android:id="@+id/total_view_li"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:background="@drawable/circle_with_white_color"
                            android:elevation="@dimen/_5sdp"
                            android:orientation="vertical"
                            android:layout_alignParentRight="true">

                            <ImageView
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/total_view_icon"
                                app:tint="@color/black"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_gravity="center"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text="@string/total_view"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/text_12"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/no_last_days_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:text="0"
                                android:singleLine="true"
                                android:gravity="center_horizontal"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_18"
                                android:layout_marginTop="@dimen/_5sdp"/>

                        </LinearLayout>

                       //user count
                       <LinearLayout
                           android:id="@+id/user_count_li"
                           android:layout_width="@dimen/_80sdp"
                           android:layout_height="@dimen/_80sdp"
                           android:background="@drawable/circle_with_white_color"
                           android:elevation="@dimen/_5sdp"
                           android:orientation="vertical"
                           android:layout_below="@+id/active_promotion1"
                           android:layout_centerHorizontal="true">

                           <ImageView
                               android:layout_width="@dimen/_20sdp"
                               android:layout_height="@dimen/_20sdp"
                               android:layout_centerHorizontal="true"
                               android:src="@drawable/ic_user_shape"
                               app:tint="@color/black"
                               android:layout_marginTop="@dimen/_10sdp"
                               android:layout_gravity="center"/>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/roboto_medium"
                               android:text="@string/all_user"
                               android:textColor="@color/colorPrimary"
                               android:textSize="@dimen/text_14"
                               android:layout_marginTop="@dimen/_2sdp"
                               android:layout_gravity="center"/>

                           <TextView
                               android:id="@+id/no_smart_user_txt"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:fontFamily="@font/roboto_medium"
                               android:text="0"
                               android:singleLine="true"
                               android:gravity="center_horizontal"
                               android:textColor="@color/black"
                               android:textSize="@dimen/text_18"
                               android:layout_marginTop="@dimen/_5sdp"/>

                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="@dimen/_10sdp"
                           android:orientation="vertical"
                           android:layout_centerHorizontal="true"
                           android:layout_below="@+id/user_count_li">

                           //Promote yourself
                           <RelativeLayout
                               android:id="@+id/promote_draft_li"
                               android:layout_width="@dimen/_200sdp"
                               android:layout_height="@dimen/_35sdp"
                               android:background="@drawable/bg_btn_shape"
                               android:visibility="gone">

                               <LinearLayout
                                   android:layout_width="wrap_content"
                                   android:layout_height="match_parent"
                                   android:orientation="horizontal"
                                   android:layout_centerHorizontal="true">

                                   <ImageView
                                       android:layout_width="@dimen/_20sdp"
                                       android:layout_height="@dimen/_20sdp"
                                       android:src="@drawable/active_promotion"
                                       app:tint="@color/white"
                                       android:layout_marginLeft="@dimen/_5sdp"
                                       android:layout_gravity="center"
                                       android:layout_toLeftOf="@+id/promote_yourself_txt1"/>

                                   <TextView
                                       android:id="@+id/promote_draft_txt1"
                                       android:layout_width="wrap_content"
                                       android:layout_height="match_parent"
                                       android:text="@string/lbl_promote_draft"
                                       android:drawableTint="@color/white"
                                       android:textSize="@dimen/text_12"
                                       android:fontFamily="@font/roboto_bold"
                                       android:gravity="center_vertical"
                                       android:textColor="@color/white"
                                       android:paddingLeft="@dimen/_10sdp"
                                       android:paddingRight="@dimen/_10sdp"/>

                               </LinearLayout>

                           </RelativeLayout>

                           //Promote yourself
                           <RelativeLayout
                               android:id="@+id/promote_yourself_li"
                               android:layout_width="@dimen/_200sdp"
                               android:layout_height="@dimen/_35sdp"
                               android:background="@drawable/bg_btn_shape">

                               <LinearLayout
                                   android:layout_width="wrap_content"
                                   android:layout_height="match_parent"
                                   android:orientation="horizontal"
                                   android:layout_centerHorizontal="true">

                                   <ImageView
                                       android:layout_width="@dimen/_20sdp"
                                       android:layout_height="@dimen/_20sdp"
                                       android:src="@drawable/active_promotion"
                                       app:tint="@color/white"
                                       android:layout_marginLeft="@dimen/_5sdp"
                                       android:layout_gravity="center"
                                       android:layout_toLeftOf="@+id/promote_yourself_txt1"/>

                                   <TextView
                                       android:id="@+id/promote_yourself_txt1"
                                       android:layout_width="wrap_content"
                                       android:layout_height="match_parent"
                                       android:text="@string/lbl_promote_ur_self"
                                       android:drawableTint="@color/white"
                                       android:textSize="@dimen/text_14"
                                       android:fontFamily="@font/roboto_bold"
                                       android:gravity="center_vertical"
                                       android:textColor="@color/white"
                                       android:paddingLeft="@dimen/_8sdp"
                                       android:paddingRight="@dimen/_5sdp"/>

                               </LinearLayout>

                           </RelativeLayout>

                       </LinearLayout>

                    </RelativeLayout>

               </LinearLayout>
           </androidx.core.widget.NestedScrollView>

        </LinearLayout>
    </LinearLayout>

    //header layout
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_65sdp">

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/_12sdp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_drawer"
            app:tint="@color/white" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_img"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            app:civ_border_color="@color/white"
            android:clickable="false"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btnMenu"
            android:src="@drawable/ic_new_user"
            android:tint="@color/white"
            app:civ_border_width="2px" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/profile_img"
            android:layout_toLeftOf="@+id/coins"
            android:layout_marginLeft="@dimen/_5sdp">


            <TextView
                android:id="@+id/user_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_6sdp"/>

            <TextView
                android:id="@+id/number_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="-"
                android:layout_below="@+id/user_name_txt"
                android:textColor="@color/white"
                android:textSize="@dimen/text_12"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_10sdp" />

            <TextView
                android:id="@+id/address_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="-"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_below="@+id/number_txt"
                android:textColor="@color/white"
                android:textSize="@dimen/text_12"
                android:layout_marginLeft="@dimen/_10sdp" />


            <TextView
                android:id="@+id/city_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="-"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_below="@+id/address_txt"
                android:textColor="@color/white"
                android:textSize="@dimen/text_12"
                android:layout_marginLeft="@dimen/_10sdp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:text="0"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_medium"
            android:drawableLeft="@drawable/ic_rupee"
            android:drawablePadding="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <include layout="@layout/loading_layout"/>

    <com.naimee.swayam.utlis.theme3bottomnavigation.BottomNavigation
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:bn_backgroundBottomColor="#ffffff"
        app:bn_countBackgroundColor="@color/colorPrimary"
        app:bn_countTextColor="#ffffff"
        app:bn_defaultIconColor="@color/textHeader"
        app:bn_rippleColor="#2f424242"
        app:bn_selectedIconColor="@color/colorPrimary"
        app:bn_shadowColor="#E2E2E2" />

</RelativeLayout>