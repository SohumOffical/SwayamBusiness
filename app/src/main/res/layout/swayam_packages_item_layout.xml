<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_5sdp">

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/view_color"
        android:layout_margin="@dimen/_5sdp"/>

    <TextView
        android:id="@+id/swayam_package_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:fontFamily="@font/roboto_bold"
        android:text="swayam package"
        android:layout_gravity="center"
        android:textColor="@color/textHeader"
        android:textSize="@dimen/text_14" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/swayam_package_txt">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_toLeftOf="@+id/select_pk">

            <TextView
                android:id="@+id/numberOfCustomer_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:text="No Of Customer"
                android:layout_centerHorizontal="true"
                android:textColor="@color/textHeader"
                android:textSize="@dimen/text_10"
                android:visibility="gone" />


            <TextView
                android:id="@+id/price_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:text="Price Per Promotion"
                android:layout_centerHorizontal="true"
                android:textColor="@color/textHeader"
                android:textSize="@dimen/text_10"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/minimum_customer_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:text="Minimum Customer"
                android:layout_centerHorizontal="true"
                android:textColor="@color/textHeader"
                android:textSize="@dimen/text_10" />

            <TextView
                android:id="@+id/monthly_payment_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:text="Monthly Payment"
                android:layout_centerHorizontal="true"
                android:textColor="@color/textHeader"
                android:textSize="@dimen/text_10" />

        </LinearLayout>

        <TextView
            android:id="@+id/select_pk"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/select_packges"
            android:layout_alignParentRight="true"
            android:textColor="@color/textHeader"
            android:textSize="@dimen/text_10"
            android:layout_marginTop="@dimen/_10sdp"/>

    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/package_detail_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>