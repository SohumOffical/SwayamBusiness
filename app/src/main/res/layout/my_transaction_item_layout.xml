<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:elevation="@dimen/_2sdp"
        android:background="@drawable/reatangle_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_2sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp">

                <TextView
                    android:id="@+id/user_name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Shri Super Market"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_14"
                    android:layout_toLeftOf="@+id/user_number_txt"
                    android:layout_marginTop="@dimen/_2sdp"/>

                <TextView
                    android:id="@+id/user_number_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/roboto_regular"
                    android:text=""
                    android:textColor="@color/textChild"
                    android:textSize="@dimen/text_12"
                    android:singleLine="true"
                    android:layout_marginTop="@dimen/_2sdp"/>

                <LinearLayout
                    android:id="@+id/method_li"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/user_name_txt">

                    <TextView
                        android:id="@+id/method_txt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Payment Method"
                        android:textColor="@color/textChild"
                        android:textSize="@dimen/text_12"
                        android:layout_marginTop="@dimen/_2sdp"/>

                    <TextView
                        android:id="@+id/method_name_txt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:text=""
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12"
                        android:layout_marginTop="@dimen/_2sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item_li"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/method_li">

                    <TextView
                        android:id="@+id/item_txt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Purchase Item"
                        android:textColor="@color/textChild"
                        android:textSize="@dimen/text_12"
                        android:layout_marginTop="@dimen/_2sdp"/>

                    <TextView
                        android:id="@+id/item_name_txt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:text=""
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_12"
                        android:layout_marginTop="@dimen/_2sdp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/price_li"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/item_li"
                    android:layout_marginBottom="@dimen/_2sdp">

                    <LinearLayout
                        android:id="@+id/purchase_li"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_below="@+id/item_li">

                        <TextView
                            android:id="@+id/purchase_txt"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Purchase Price"
                            android:textColor="@color/textChild"
                            android:textSize="@dimen/text_12"
                            android:layout_marginTop="@dimen/_2sdp"/>

                        <TextView
                            android:id="@+id/purchase_price_txt"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_bold"
                            android:text=""
                            android:textColor="@color/chocolate"
                            android:textSize="@dimen/text_16"
                            android:layout_marginTop="@dimen/_2sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/discount_txt"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Discount"
                            android:gravity="center_horizontal"
                            android:textColor="@color/textChild"
                            android:textSize="@dimen/text_12"
                            android:layout_marginTop="@dimen/_2sdp"/>

                        <TextView
                            android:id="@+id/max_discount_txt"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:fontFamily="@font/roboto_bold"
                            android:text=""
                            android:textColor="@color/chocolate"
                            android:textSize="@dimen/text_16"
                            android:layout_marginTop="@dimen/_2sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/selling_li"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_below="@+id/purchase_li">

                        <TextView
                            android:id="@+id/selling_txt"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:singleLine="true"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Selling Price"
                            android:gravity="end"
                            android:textColor="@color/textChild"
                            android:textSize="@dimen/text_12"
                            android:layout_marginTop="@dimen/_2sdp"/>

                        <TextView
                            android:id="@+id/selling_price_txt"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto_bold"
                            android:text=""
                            android:gravity="end"
                            android:textColor="@color/chocolate"
                            android:textSize="@dimen/text_16"
                            android:layout_marginTop="@dimen/_2sdp"/>

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>